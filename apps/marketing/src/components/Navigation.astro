---
// Navigation component
---

<nav class="fixed top-0 w-full bg-gray-900/95 backdrop-blur-md border-b border-gray-800 z-50">
  <div class="container">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src="/images/logo.svg" alt="HavenKeep" class="h-9" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/features" class="text-gray-300 hover:text-white font-medium transition-colors">Features</a>
        <a href="/pricing" class="text-gray-300 hover:text-white font-medium transition-colors">Pricing</a>
        <a href="/about" class="text-gray-300 hover:text-white font-medium transition-colors">About</a>
        <a href="/blog" class="text-gray-300 hover:text-white font-medium transition-colors">Blog</a>
      </div>

      <!-- CTA -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="https://app.havenkeep.com/login" class="text-gray-300 hover:text-white font-medium transition-colors">
          Sign In
        </a>
        <a href="https://app.havenkeep.com/signup" class="btn-primary">
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden p-2 text-gray-300 hover:text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-800 bg-gray-900">
    <div class="container py-4 space-y-3">
      <a href="/features" class="block py-2 text-gray-300 hover:text-white font-medium">Features</a>
      <a href="/pricing" class="block py-2 text-gray-300 hover:text-white font-medium">Pricing</a>
      <a href="/about" class="block py-2 text-gray-300 hover:text-white font-medium">About</a>
      <a href="/blog" class="block py-2 text-gray-300 hover:text-white font-medium">Blog</a>
      <div class="pt-4 border-t border-gray-800 space-y-2">
        <a href="https://app.havenkeep.com/login" class="block text-center py-2 text-gray-600 hover:text-gray-900 font-medium">
          Sign In
        </a>
        <a href="https://app.havenkeep.com/signup" class="block text-center btn-primary">
          Get Started
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
