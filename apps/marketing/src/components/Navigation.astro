---
// Navigation component
---

<nav class="fixed top-0 w-full bg-white/80 backdrop-blur-md border-b border-gray-200 z-50">
  <div class="container">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="text-xl font-bold text-gray-900">HavenKeep</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/features" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">Features</a>
        <a href="/pricing" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">Pricing</a>
        <a href="/about" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">About</a>
        <a href="/blog" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">Blog</a>
      </div>

      <!-- CTA -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="https://app.havenkeep.com/login" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">
          Sign In
        </a>
        <a href="https://app.havenkeep.com/signup" class="btn-primary">
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden p-2 text-gray-600 hover:text-gray-900">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
    <div class="container py-4 space-y-3">
      <a href="/features" class="block py-2 text-gray-600 hover:text-gray-900 font-medium">Features</a>
      <a href="/pricing" class="block py-2 text-gray-600 hover:text-gray-900 font-medium">Pricing</a>
      <a href="/about" class="block py-2 text-gray-600 hover:text-gray-900 font-medium">About</a>
      <a href="/blog" class="block py-2 text-gray-600 hover:text-gray-900 font-medium">Blog</a>
      <div class="pt-4 border-t border-gray-200 space-y-2">
        <a href="https://app.havenkeep.com/login" class="block text-center py-2 text-gray-600 hover:text-gray-900 font-medium">
          Sign In
        </a>
        <a href="https://app.havenkeep.com/signup" class="block text-center btn-primary">
          Get Started
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
