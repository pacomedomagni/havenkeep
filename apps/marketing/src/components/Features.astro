---
// Features grid section - Outcome-focused
const features = [
  {
    icon: 'scan',
    title: 'Add Any Item in 5 Seconds',
    description: 'Scan a barcode or snap a receipt photo. Our AI fills in the product name, purchase date, and warranty length\u2014so you never type a thing.',
    highlight: '5-second setup',
  },
  {
    icon: 'receipt',
    title: 'Never Dig for a Receipt Again',
    description: 'Point your phone at any receipt and it\u2019s instantly digitized, organized, and searchable. No more shoeboxes, no more lost emails.',
    highlight: 'AI-powered OCR',
  },
  {
    icon: 'bell',
    title: 'Claim Before It\u2019s Too Late',
    description: 'Get smart reminders 30, 14, and 7 days before a warranty expires. We\u2019ll even tell you what documents you need to file a claim.',
    highlight: 'Auto-reminders',
  },
  {
    icon: 'cloud',
    title: 'Access From Any Device',
    description: 'Your warranty data syncs across your phone, tablet, and desktop in real time. Your spouse broke the toaster? They can check the warranty from their phone.',
    highlight: 'Multi-device sync',
  },
  {
    icon: 'shield',
    title: 'Bank-Level Security',
    description: 'AES-256 encryption, TLS 1.3, and row-level access control keep your data locked down. We can\u2019t read it, and neither can anyone else.',
    highlight: 'End-to-end encryption',
  },
  {
    icon: 'export',
    title: 'Your Data, Your Way',
    description: 'Export to PDF for insurance claims, CSV for spreadsheet lovers, or share a warranty doc directly with a repair technician via email.',
    highlight: 'PDF, CSV, email export',
  },
];
---

<section class="py-24 bg-gray-900">
  <div class="container">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-16 reveal">
      <span class="text-secondary font-semibold text-sm uppercase tracking-wider">Why HavenKeep</span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mt-3 mb-4">
        Built for people who are tired<br />of losing money
      </h2>
      <p class="text-xl text-gray-300">
        Every feature exists to save you time, money, or stress. Usually all three.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {features.map((feature, i) => (
        <div class={`reveal reveal-delay-${(i % 3) + 1} group p-6 rounded-2xl border border-gray-700 bg-gray-800/50 hover:border-primary/50 hover:bg-gray-800 transition-all duration-300`}>
          <!-- Icon -->
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
            {feature.icon === 'scan' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
              </svg>
            )}
            {feature.icon === 'receipt' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            )}
            {feature.icon === 'bell' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
            )}
            {feature.icon === 'cloud' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
              </svg>
            )}
            {feature.icon === 'shield' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
            {feature.icon === 'export' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            )}
          </div>

          <!-- Content -->
          <h3 class="text-lg font-bold text-white mb-2">
            {feature.title}
          </h3>
          <p class="text-gray-400 text-sm leading-relaxed mb-3">
            {feature.description}
          </p>
          <span class="inline-flex items-center text-xs font-medium text-primary bg-primary/10 px-2.5 py-1 rounded-full">
            {feature.highlight}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
