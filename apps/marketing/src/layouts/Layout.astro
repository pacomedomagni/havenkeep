---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Track all your warranties in one place. Never lose a receipt again.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/images/logo-icon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | HavenKeep</title>
    <meta name="title" content={`${title} | HavenKeep`} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://havenkeep.com/" />
    <meta property="og:title" content={`${title} | HavenKeep`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://havenkeep.com/og-image.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://havenkeep.com/" />
    <meta property="twitter:title" content={`${title} | HavenKeep`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://havenkeep.com/og-image.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-gray-100">
    <slot />
  </body>
</html>
