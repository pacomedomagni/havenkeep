# HavenKeep Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Application
# ============================================
NODE_ENV=development
API_PORT=3000
API_URL=http://localhost:3000

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://havenkeep:CHANGE_ME@localhost:5432/havenkeep
DB_HOST=localhost
DB_PORT=5432
DB_NAME=havenkeep
DB_USER=havenkeep
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS

# ============================================
# Authentication & Security
# ============================================
# CRITICAL: Generate strong random strings for production!
# Use: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS_RANDOM_STRING
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=CHANGE_ME_DIFFERENT_32_CHAR_RANDOM_STRING
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================
# MinIO / Object Storage (Docker Compose)
# ============================================
MINIO_ACCESS_KEY=CHANGE_ME
MINIO_SECRET_KEY=CHANGE_ME_STRONG_SECRET
MINIO_BUCKET=havenkeep

# ============================================
# DigitalOcean Spaces (S3-compatible storage, production)
# ============================================
DO_SPACES_KEY=your_spaces_access_key
DO_SPACES_SECRET=your_spaces_secret_key
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=havenkeep
DO_SPACES_REGION=nyc3

# ============================================
# Stripe Payments
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PREMIUM=price_...

# ============================================
# OAuth
# ============================================
GOOGLE_CLIENT_ID=
APPLE_BUNDLE_ID=

# ============================================
# Email (SendGrid)
# ============================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@havenkeep.com
SENDGRID_REPLY_TO_EMAIL=support@havenkeep.com

# ============================================
# External APIs (Optional)
# ============================================
BARCODE_API_KEY=  # UPC database API key
OCR_API_KEY=      # OCR.space API key

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4321

# ============================================
# Monitoring
# ============================================
LOG_LEVEL=info

# ============================================
# OpenAI (AI features)
# ============================================
OPENAI_API_KEY=

# ============================================
# RevenueCat (In-App Purchases)
# ============================================
# Secret API key from RevenueCat dashboard (server-side only, NOT the public SDK key)
# Get it from: https://app.revenuecat.com → Project Settings → API Keys → Secret API key
REVENUECAT_SECRET_API_KEY=
# Shared secret for webhook signature validation
# Set this in RevenueCat dashboard under Integrations → Webhooks → Authorization header
REVENUECAT_WEBHOOK_SECRET=
